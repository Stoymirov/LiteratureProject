@model IEnumerable<LiteratureProject.Core.Models.BulgarianModels.DeckDisplayModel>

@{
    ViewData["Title"] = "All Decks";
}

<h1>All Decks</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Topic</th>
            <th>Created By</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var deck in Model)
        {
            <tr>
                <td>@deck.Name</td>
                <td>@deck.Topic</td>
                <td>@deck.CreatedBy</td>
                <td>
                    <form asp-action="MyDeck" method="post">
                        <input type="hidden" name="id" value="@deck.Id" />
                        <button type="submit" class="btn btn-primary">View Deck</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
