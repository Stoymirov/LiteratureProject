@model LiteratureProject.Core.Models.BulgarianModels.SingleProblemDisplayModel

<div class="container">
    @if (Model.Problem != null)

    {
        <div class="problem">
            <h3>Question:</h3>
            <p>@Model.Problem.Question</p>

            <h4>Answers:</h4>
            <ul>
                <li>@Model.Problem.Answer1</li>
                <li>@Model.Problem.Answer2</li>
                <li>@Model.Problem.Answer3</li>
                <li>@Model.Problem.Answer4</li>
            </ul>
        </div>

        <nav aria-label="Problem navigation">
            <ul class="pagination">
                @if (Model.CurrentPage > 1)

                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Problems" asp-route-deckId="@Model.DeckId" asp-route-pageNumber="@(Model.CurrentPage - 1)">
                            Previous
                        </a>
                    </li>
                }

                else

                {
                    <li class="page-item disabled">
                        <span class="page-link">Previous</span>
                    </li>
                }

                <li class="page-item active">
                    <span class="page-link">@Model.CurrentPage</span>
                </li>

                @if (Model.CurrentPage < Model.TotalPages)

                {
                    <li class="page-item">
                        <a class="page-link" asp-action="ProblemsWithDeckId" asp-route-deckId="@Model.DeckId" asp-route-pageNumber="@(Model.CurrentPage + 1)">
                            Next
                        </a>
                    </li>
                }

                else

                {
                    <li class="page-item disabled">
                        <span class="page-link">Next</span>
                    </li>
                }
            </ul>
        </nav>
    }

    else

    {
        <p>No problems available.</p>
    }
</div>