@model LiteratureProject.Core.Models.BulgarianModels.ProblemFormModel

@{
    ViewData["Title"] = "Edit Problem";
}
<link href="~/css/AddProblem.css" rel="stylesheet" />
<h2>Edit Problem</h2>

<form asp-action="EditProblem" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Question"></label>
        <input asp-for="Question" class="form-control" />
        <span asp-validation-for="Question" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Answer1">Answer 1</label>
        <input asp-for="Answer1" class="form-control" />
        <span asp-validation-for="Answer1" class="text-danger"></span>

        <div class="form-check">
            <input asp-for="IsAnswer1Correct" class="form-check-input" type="checkbox" />
            <label asp-for="IsAnswer1Correct" class="form-check-label">Correct Answer</label>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Answer2">Answer 2</label>
        <input asp-for="Answer2" class="form-control" />
        <span asp-validation-for="Answer2" class="text-danger"></span>

        <div class="form-check">
            <input asp-for="IsAnswer2Correct" class="form-check-input" type="checkbox" />
            <label asp-for="IsAnswer2Correct" class="form-check-label">Correct Answer</label>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Answer3">Answer 3</label>
        <input asp-for="Answer3" class="form-control" />
        <span asp-validation-for="Answer3" class="text-danger"></span>

        <div class="form-check">
            <input asp-for="IsAnswer3Correct" class="form-check-input" type="checkbox" />
            <label asp-for="IsAnswer3Correct" class="form-check-label">Correct Answer</label>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Answer4">Answer 4</label>
        <input asp-for="Answer4" class="form-control" />
        <span asp-validation-for="Answer4" class="text-danger"></span>

        <div class="form-check">
            <input asp-for="IsAnswer4Correct" class="form-check-input" type="checkbox" />
            <label asp-for="IsAnswer4Correct" class="form-check-label">Correct Answer</label>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Explanation"></label>
        <textarea asp-for="Explanation" class="form-control"></textarea>
        <span asp-validation-for="Explanation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DeckOfProblemsId">Select Deck</label>
        <select asp-for="DeckOfProblemsId" asp-items="Model.DeckOptions" class="form-control">
            <option value="">-- Select a Deck --</option>
        </select>
        <span asp-validation-for="DeckOfProblemsId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
