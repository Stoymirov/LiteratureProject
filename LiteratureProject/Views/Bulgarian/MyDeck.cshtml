@model LiteratureProject.Core.Models.BulgarianModels.DeckDisplayModel
<link href="~/css/MyDeck.css" rel="stylesheet" />
@{
    ViewData["Title"] = "My Deck";
}

<h1>@Model.Name</h1>

<div>
    <p><strong>Created By:</strong> @Model.CreatedBy</p>
    <p><strong>Topic:</strong> @Model.Topic</p>

    <form action="@Url.Action("ProblemsWithDeckId", "Bulgarian")" method="get">
        <input type="hidden" name="deckId" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">View All Problems</button>
    </form>

</div>