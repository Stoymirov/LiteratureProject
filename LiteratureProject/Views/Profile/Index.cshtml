@model LiteratureProject.Core.Models.ProfileModels.UserProfileViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="stylesheet" href="~/css/Profile.css">
</head>
<body>
    <div class="wrapper">
        <div class="container profile-container">
           
            <div class="header profile-header">
                <h1>@Model.FullName</h1>
            </div>

           
            <div class="profile-content">
                <div class="profile-image">
                    <img src="@Model.ProfilePictureUrl" alt="Profile Picture">
                </div>
                <div class="profile-info">
                    <p><strong>Bio:</strong> @Model.Bio</p>
                    <p><strong>Location:</strong> @Model.Location</p>
                </div>
            </div>

           
            <div class="profile-actions">
                <a asp-controller="Profile" asp-action="Edit" class="btn btn-primary">Edit Profile</a>
                <a asp-controller="Account" asp-action="Logout" class="btn btn-primary">Logout</a>
            </div>
        </div>
    </div>
</body>
</html>
