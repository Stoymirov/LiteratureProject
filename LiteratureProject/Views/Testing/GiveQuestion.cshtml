<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/GiveQuestion.css">
</head>
<body>
    <form method="post" asp-action="SeeQuestionResult">
        <input type="hidden" name="deckId" value="@Model.DeckOfProblemsId" />
        <input type="hidden" name="problemId" value="@Model.Id" />
        <input type="hidden" name="problemNumber" value="@(ViewData["ProblemNumber"] ?? 1)" />
        <input type="hidden" name="points" value="@(ViewData["Points"])" />

        <div class="wrapper">
            <h2>Question</h2>
            <h3>@Model.Question</h3>
            <p>Problem Number: @ViewData["ProblemNumber"]</p>
            <div class="flex-container">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="selectedAnswer" id="answer1" value="1" required>
                    <label class="form-check-label" for="answer1">
                        @Model.Answer1
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="selectedAnswer" id="answer2" value="2">
                    <label class="form-check-label" for="answer2">
                        @Model.Answer2
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="selectedAnswer" id="answer3" value="3">
                    <label class="form-check-label" for="answer3">
                        @Model.Answer3
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="selectedAnswer" id="answer4" value="4">
                    <label class="form-check-label" for="answer4">
                        @Model.Answer4
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Submit Answer</button>
        </div>

    </form>
</body>
</html>