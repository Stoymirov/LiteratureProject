@model LiteratureProject.Core.Models.LiteratureWorkModels.LiteratureWorkDisplayViewModel
<link href="~/css/LitDelete.css" rel="stylesheet" />
<div class="container delete-container">
    <h1 class="delete-title">Delete Literature Work</h1>

    <p class="delete-message">
        Are you sure you want to delete the literature work titled
        <strong>"@Model.Name"</strong>?
    </p>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="delete-form">
        <div class="delete-actions">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
